@model ControleAlunosMVC.Models.ViewModels.StudentSubjectViewModel
@{
    ViewData["Title"] = "Matriculas";
}

<div class="text-center">
    <h2 class="display-6">@ViewData["Title"]</h2>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a asp-action="Create" class="btn btn-light">Adicionar nova Matricula </a>
    </div>
    <br />

    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-success">
                <th>
                    Aluno(a)
                </th>
                <th>
                    Disciplina
                </th>
                <th>
                    Data
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StudentSubjects)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Student.Name)</td>

                    <td> @Html.DisplayFor(modelItem => item.Subject.Name)</td>

                    <td> @Html.DisplayFor(modelItem => item.DateStudentSubject)</td>

                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.SubjectId" asp-route-id2="@item.StudentId" class="badge rounded-pill bg-info">Editar</a>*@
                        <a asp-action="Details" asp-route-id="@item.SubjectId" asp-route-id2="@item.StudentId" class="badge rounded-pill bg-secondary">Detalhes</a>
                       @* <a asp-action="Delete" asp-route-id="@item.SubjectId" asp-route-id2="@item.StudentId" class="badge rounded-pill bg-danger">Deletar</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
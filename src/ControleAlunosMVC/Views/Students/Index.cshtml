@model IEnumerable<ControleAlunosMVC.Models.Student>
@{
    ViewData["Title"] = "Alunos";
}
<div class="text-center">
    <h2 class="display-6">@ViewData["Title"]</h2>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a asp-action="Create" class="btn btn-light">Adicionar novo Aluno</a>
    </div> 
    <br />
    
    @using (Html.BeginForm("Index", "Students", FormMethod.Get))
    {
        <p>Nome:</p>
        <input class="form-control" type="text" name="text" id="text" />

        <input class="btn btn-secondary" type="submit" value="Search" />
    }
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-success">
                <th>
                    @Html.DisplayNameFor(Model => Model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="badge rounded-pill bg-info">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="badge rounded-pill bg-secondary">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="badge rounded-pill bg-danger">Deletar</a>
                        
                        <a asp-action="Score" asp-route-id="@item.Id" class="badge rounded-pill bg-warning">Notas</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@model ControleAlunosMVC.Models.Score
@{
    ViewData["Title"] = "Deletar";
}

<h2>@ViewData["Title"]</h2>
<br />
<h3>Tem certeza que deseja deletar esta nota ?</h3>
<br />
<div>
    <h4>Nota:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudentId):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubjectId):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StudentScore):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentScore)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateScore):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateScore)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </form>
</div>